package basics;

public class Constructors {

	String name;
//	constructor sholud have same name as class name
//	it should not have return type as methods
//	it is mainly used for initializing data members
	Constructors(String n){
		name=n;
		System.out.println("The name is: "+name);
	}
	public static void main(String[] args) {
		//constructor is invoked while creating the object
		Constructors cs=new Constructors("aabreeq");
	
	}
}
